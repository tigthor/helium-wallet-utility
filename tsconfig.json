{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./build",
    "declaration": true,
    "rootDir": "./src",
    "types": [
      "node",
      "jest"
    ],
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.json",
  ],
  "exclude": [
      "node_modules/**/*",
      "__tests__/*"
  ]
}
